extends template

block content

  section(class="row")
    each item in data
      article(class="col-xs-12 col-sm-6 col-md-3 card")
        img(src=item.thumbnail, class="card-img-top", alt="")
        div(class="card-body")
          h2(class="card-title") Álbum: #{item.album}
          h3 Artista: #{item.artist}
          a(href=`/albums?id=${item.id}`, class="btn btn-primary") Ver más información