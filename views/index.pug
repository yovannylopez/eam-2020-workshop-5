extends template

block content

  section(class="list-section")
    each item in data
      article(class="card")
        img(src=item.thumbnail, class="image-thumb", alt=item.alt, title=item.album)
        div(class="card-body")
          h2 Álbum:
            p #{item.album}
          h2 Artista:
          p #{item.artist}
          a(href=`/albums?id=${item.id}`, class="button") Ver más información